
@{
    ViewData["Title"] = "Cart";
}

<h3>Cart Page</h3>
<table class="table-bordered table">
    <tr>
        <th>Option</th>
        <th>Id</th>
        <th>Name</th>
        <th>Photo</th>
        <th>Price</th>
        <th>Quantity</th>
        <th>Sub Total</th>
    </tr>
    @if (ViewBag.cart != null)
    {
        @foreach (var item in ViewBag.cart)
        {
            <tr>
                <td>
                    <a asp-controller="cart" asp-action="remove"
                       asp-route-id="@item.SanPham.MaSP">Remove</a>
                </td>
                <td>@item.SanPham.MaSP</td>
                <td>@item.SanPham.TenSP</td>
                <td>
                    <img src="~/images/@item.SanPham.HinhSP" width="60" height="60" />
                </td>
                <td>@item.SanPham.TenSP</td>
                <td>@item.SoLuong</td>
                <td>
                    @(item.SanPham.DonGia * item.SoLuong)
                </td>
            </tr>
        }
        <tr>
            <td align="right" colspan="6">Sum</td>
            <td>
                @ViewBag.total
            </td>
        </tr>
    }
    </table>
    
<br>
<a asp-controller="Home" asp-action="index">
    Continue Shopping
</a>
<a asp-controller="Cart" asp-action="Checkout" class="btn btn-info">
    Thanh toán
</a>

