

@model IEnumerable<ShopQuanAo.Models.SanPham>
@using ShopQuanAo.Models
@{
    ViewData["Title"] = "TrangSanPham";

}



<head>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <style>
        body {
            font-family: Arial, Helvetica, sans-serif;
        }

        * {
            box-sizing: border-box;
        }

        /* Create a column layout with Flexbox */
        .row {
            display: flex;
        }

        /* Left column (menu) */
        .left {
            flex: 35%;
            padding: 15px 0;
        }

            .left h2 {
                padding-left: 8px;
            }

        /* Right column (page content) */
        .right {
            flex: 65%;
            padding: 15px;
        }

        /* Style the search box */
        #mySearch {
            width: 100%;
            font-size: 18px;
            padding: 11px;
            border: 1px solid #ddd;
        }

        /* Style the navigation menu inside the left column */
        #myMenu {
            list-style-type: none;
            padding: 0;
            margin: 0;
        }

            #myMenu li a {
                padding: 12px;
                text-decoration: none;
                color: black;
                display: block
            }

                #myMenu li a:hover {
                    background-color: #eee;
                }
    </style>
</head>
<link rel="stylesheet" href="~/css/style.css">
<link rel="stylesheet" href="~/css/bootstrap.min.css">
<link rel="stylesheet" href="~/css/magnific-popup.css">
<link rel="stylesheet" href="~/css/jquery-ui.css">
<link rel="stylesheet" href="~/css/owl.carousel.min.css">
<div class="site-wrap">

    <div class="bg-light py-3">
        <div class="container">
            <div class="row">
                <div class="col-md-12 mb-0"><a href="index.html">Home</a> <span class="mx-2 mb-0">/</span> <strong class="text-black"></strong></div>
            </div>
        </div>
    </div>
    <div class="site-section">
        <div class="container">
            <div class="row mb-5">
                <div class="col-md-9 order-2">

                    <div class="row">
                        <div class="col-md-12 mb-5">
                            <div class="float-md-left mb-4"><h2 class="text-black h5">Sản phẩm</h2></div>
                            <div class="d-flex">
                                <div class="btn-group">

                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row mb-5">
                        @foreach (var item in Model)
                        {
                            <div class="col-sm-6 col-lg-4 mb-4" data-aos="fade-up">
                                <div class="block-4 text-center border">
                                    <figure class="block-4-image">
                                        <a asp-controller="Home" asp-action="Thongtinsanpham" asp-route-id="@item.MaSP"><img src="~/images/@Html.DisplayFor(modelItem => item.HinhSP)" alt="Image placeholder" class="img-fluid"></a>
                                    </figure>
                                    <div class="block-4-text p-4">
                                        <h3><a href="shop-single.html">@Html.DisplayFor(modelItem => item.TenSP)</a></h3>
                                        <p class="mb-0">@Html.DisplayFor(modelItem => item.Description)</p>
                                        <p class="text-primary font-weight-bold">@Html.DisplayFor(modelItem => item.DonGia) VNĐ</p>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                    <div class="row" data-aos="fade-up">
                        <div class="col-md-12 text-center">
                            <div class="site-block-27">
                                <ul>
                                    <li>
                                        @for (int i = 0; i <= ViewBag.Count; i++)
                                        {
                                            <a style="text-decoration:none" href="@Url.ActionLink("Index","Home", new { Page = i } )">@i</a>
                                        }
                                    </li>
                                </ul>
                            </div>
                        </div>
                    </div>
                </div>


                <div class="col-md-3 order-1 mb-5 mb-md-0">
                    <div class="border p-4 rounded mb-4">
                        <h3 class="mb-3 h6 text-uppercase text-black d-block">Categories</h3>
                        <ul class="list-unstyled mb-0 " id="myMenu">
                            @foreach (var item in ViewBag.TenLoaiSP)
                            {
                                <li>
                                    <a href="@Url.Action("Index","Home", new { MaLoaiSP = item.Key})">
                                        @item.Value
                                    </a>
                                </li>
                            }
                        </ul>
                    </div>

                    @*<div class="border p-4 rounded mb-4">
                            <div class="mb-4">
                                    <h3 class="mb-3 h6 text-uppercase text-black d-block">Filter by Price</h3>
                                    <div id="slider-range" class="border-primary"></div>
                                    <input type="text" name="text" id="amount" class="form-control border-0 pl-0 bg-white" disabled="" />
                                </div>
                            <div class="mb-4">
                                <form action="@Url.Action("TimKiem","Home")" method="post">
                                    <label>Min</label>
                                    <input type="text" name="min" id="min" />
                                    <label>Max</label>
                                    <input type="text" name="max" id="max" />
                                    <input type="submit" class="btn-default" value="Tìm" />
                                </form>
                                @foreach (var item in ViewBag.TenLoaiSP)
                                {
                                    <a href="@Url.Action("Sapxepgiam", "Home", new { MaLoaiSP = item.Key })">
                                        Săp xếp @item.Value giảm
                                    </a>
                                    <br>
                                }
                                </div>

                        </div>*@
                </div>
            </div>

        </div>
    </div>
</div>
