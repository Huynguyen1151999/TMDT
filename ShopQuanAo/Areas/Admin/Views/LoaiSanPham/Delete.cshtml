@model ShopQuanAo.Models.LoaiSanPham

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/LayoutAdmin.cshtml";
}

    <div id="layoutSidenav_content">
        <main>

            <h3 style="margin-top:60px">Bạn có chắc chắn muốn xóa?</h3>
            <div>
                <hr />
                <dl class="row">
                    <dt class="col-sm-2">
                        Tên loại sản phẩm:
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.TenLoaiSP)
                    </dd>
                </dl>

                <form asp-action="Delete">
                    <input type="hidden" asp-for="MaLoaiSP" />
                    <input type="submit" value="Xóa" class="btn btn-danger" onclick=" return confirm('Xóa loại sản phẩm này?');" />
                    <a class="btn btn-outline-warning" asp-action="Index">Quay về</a>
                </form>
            </div>
            </main>
</div>