@model ShopQuanAo.Models.SanPham

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/LayoutAdmin.cshtml";
}

    <div id="layoutSidenav_content">
        <main>

            <div>
                <h3>Thông tin chi tiết</h3>
                <hr />
                <dl class="row">
                    <dt class="col-sm-2">
                        Tên sản phẩm:
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.TenSP)
                    </dd>
                    <dt class="col-sm-2">
                        Đơn giá:
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.DonGia)
                    </dd>
                    <dt class="col-sm-2">
                        Hình ảnh:
                    </dt>
                    <dd class="col-sm-10">
                        <img src="~/images/@Model.HinhSP" class="img-thumbnail" width="100" height="100" alt="SanPham" />
                    </dd>
                    <dt class="col-sm-2">
                        Mô tả:
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.Description)
                    </dd>
                    <dt class="col-sm-2">
                        Mã loại:
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.LoaiSanPham.MaLoaiSP)
                    </dd>
                </dl>
            </div>
            <div>
                <a class="btn btn-outline-warning" asp-action="Index">Quay về</a>
            </div>
            </main>
</div>