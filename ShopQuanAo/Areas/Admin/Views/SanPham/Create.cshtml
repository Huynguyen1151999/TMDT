@model ShopQuanAo.Models.SanPham

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/LayoutAdmin.cshtml";
}
    <div id="layoutSidenav_content">
        <main>
            <h1 style="margin-top:60px">Tạo mới sản phẩm</h1>

            <hr />
            <div class="row">
                <div class="col-md-4">
                    <form asp-action="Create" asp-controller="SanPham"
                          method="post" enctype="multipart/form-data">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="form-group">
                            <label class="control-label">Tên sản phẩm </label>
                            <input asp-for="TenSP" class="form-control" />
                            <span asp-validation-for="TenSP" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label class="control-label">Đơn giá </label>
                            <input asp-for="DonGia" class="form-control" />
                            <span asp-validation-for="DonGia" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label class="control-label">Loại sản phẩm</label>
                            <select asp-for="MaLoaiSP" class="form-control" asp-items="ViewBag.MaLoaiSP"></select>
                        </div>
                        <div class="form-group">
                            <label class="control-label">Hình ảnh</label>
                            <div class="control-label">
                                <input class="form-control" type="file" name="photo">
                            </div>
                        </div>
                        <div class="form-group">
                            <label asp-for="Description" class="control-label"></label>
                            <input asp-for="Description" class="form-control" />
                            <span asp-validation-for="Description" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <input type="submit" value="Tạo" class="btn btn-primary" />
                        </div>
                    </form>
                </div>
            </div>

            <div>
                <a class="btn btn-outline-warning" asp-action="Index">Back to List</a>
            </div>
            </main>
        </div>
